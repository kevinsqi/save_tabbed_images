{
  "name": "Save Tabbed Images",
  "description": "Save images currently opened in tabs.",
  "version": "0.5.0",
  "minimum_chrome_version": "16.0.884",
  "manifest_version": 2,
  "permissions": [
    "downloads",
    "tabs",
    "<all_urls>",
    "webRequest",
    "activeTab",
    "*://*/*"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "img/icon16.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  }
}
